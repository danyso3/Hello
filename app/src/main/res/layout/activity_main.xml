<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@android:color/holo_blue_bright">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/my_familly"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="3"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="206dp"
            android:id="@+id/imageView"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@mipmap/geads" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/this_is_me"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="206dp"
            android:id="@+id/imageView2"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@mipmap/dcm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/friends"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_row="7"
            android:layout_column="0" />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="206dp"
            android:id="@+id/imageView3"
            android:layout_row="8"
            android:layout_column="0"
            android:background="@mipmap/Imagen13" />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="206dp"
            android:id="@+id/imageView4"
            android:layout_row="8"
            android:layout_column="3"
            android:background="@mipmap/dvx" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello World!"
        android:id="@+id/textView2"
        android:textColorHighlight="#f5ccfb"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#fffb00"
        android:autoText="false"
        android:background="#fbff00" />

</RelativeLayout>
